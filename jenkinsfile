pipeline {
	agent any	tools {
		maven 'my-maven’
		jdk 'my-jdk’
	}
	stages {
		stage('Clone'){
			steps {git url:'https://github.com/josmyrose-03/eureka-service.git', branch:'master’}			}
		stage('Build'){
			steps {sh "mvn clean package -DskipTests"}
		}
		stage('Pre_deploy'){
			steps{sh "docker rm -f eureka-cntr"
			          sh docker rmi -f eureka-img}
		}
		stage('Deploy') {
			steps { sh "docker build -t eureka-img ."
			            sh "docker run -p 8761:8761 -d --name eureka-cntr eureka-img"}
		}
	}
}